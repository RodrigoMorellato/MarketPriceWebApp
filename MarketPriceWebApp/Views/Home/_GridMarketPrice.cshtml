@using System.Linq
@using System.Globalization

<div class="text-center">
    @model MarketViewModel

    <table id="customerDatatable" class="table table-striped table-bordered dtr-inline collapsed dt-responsive nowrap" width="100%" cellspacing="0">
        <thead>
        <tr role="row">
            <th class="text-center"><label>Date</label></th>
            <th class="text-center"><label>Time</label></th>
            <th class="text-center">@Html.DisplayNameFor(model => model.MarketPrices.First().Value.Price)</th>
        </tr>
        </thead>
        <tbody>
        @if (Model != null)
        {
            foreach (var item in Model.MarketPrices)
            {
                <tr role="row" id="row-item.Key">
                    <td class="text-center">@Html.Raw(@item.Value.Date.Date.ToShortDateString())</td>
                    <td class="text-center">@Html.Raw(@item.Value.Date.ToShortTimeString())</td>
                    <td class="text-center">@Html.Raw(Math.Round(@item.Value.Price, 2).ToString("C", new CultureInfo("fr-FR")))</td>
                </tr>
            }
        }
        </tbody>
    </table>
</div>